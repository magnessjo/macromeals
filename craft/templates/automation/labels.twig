
{% includeCssFile "/labels.css" %}
{% includeJsFile "/automation.js" %}
{% set orders = craft.commerce.orders.orderStatusId(4) %}

<!DOCTYPE html>
<html>

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
  </head>

  <body>


    {% if currentUser %}

      {% if currentUser.admin %}

        <main>

          {% for order in orders | reverse %}

            {% for item in order.lineItems %}

              {% set variant = item.purchasable %}
              {% set product = variant.product %}
              {% set quantity = item.qty | number_format %}

              {% for i in 1..quantity %}

                <section>

                  <div class="info">

                    <img src="/images/logo/green.svg" class="logo" alt="image of the macro meals logo" />

                    <div class="description">

                      <h1>{{ product.title }} <span>{{ product.subTitle }}</span></h1>

                      <div class="ingredients">
                        <h3>Ingredients</h3>

                        {% for list in variant.ingredients %}

                          {% if not list.hide %}
                            {{ list.item }}{% if not loop.last %},{% endif %}
                          {% endif %}

                        {% endfor %}

                      </div>

                      <div class="instructions">
                        <h3>Instructions</h3>
                        <p>{{ product.instructions }}</p>
                      </div>

                      <div class="alerts">

                        <div>
                          <p class="headline">Enjoy By</p>
                          {% if product.expirationDate %}
                            <p>{{ product.expirationDate.format('m/d/y') }}</p>
                          {% endif %}
                        </div>

                        <div>
                          <p class="headline">ALLERGEN ALERT</p>
                          <p>{{ product.allergenAlert }}</p>
                        </div>

                      </div>

                    </div>

                    <div class="connect">
                      <h4>Connect With Us</h4>
                      <p>http://www.macromeals.life</p>
                    </div>

                  </div>

                  <div class="facts">

                      <div class="list">

                        <h2>NUTRITION FACTS</h2>

                        <div>
                          <p class="nimbus-tiny-bold"><span>SIZE:</span> {{ variant.title }}</p>
                          {% for row in variant.productMacros %}
                            {% if row.calories %}
                              <p class="nimbus-tiny-bold"><span>CALORIES:</span> {{ row.calories }}</p>
                            {% else %}
                              <p>The calories are not entered in the CMS</p>
                            {% endif %}
                            {% if row.protein %}
                              <p class="nimbus-tiny-bold protein"><span>PROTEIN:</span> {{ row.protein }}g</p>
                            {% else %}
                              <p>The Protein are not entered in the CMS</p>
                            {% endif %}
                            {% if row.carbs %}
                              <p class="nimbus-tiny-bold carbs"><span>CARBS:</span> {{ row.carbs }}g</p>
                            {% else %}
                              <p>The Carbs are not entered in the CMS</p>
                            {% endif %}
                            {% if row.fat %}
                              <p class="nimbus-tiny-bold fat"><span>FAT:</span> {{ row.fat }}g</p>
                            {% else %}
                              <p>The Fat are not entered in the CMS</p>
                            {% endif %}
                          {% endfor %}

                        </div>

                        {% include "components/pie-chart.twig" with { 'macros': variant.productMacros } %}

                      </div>

                  </div>

                </section>

              {% endfor %}

            {% endfor %}

          {% endfor %}

        </main>

      {% endif %}

    {% endif %}

  </body>

</html>
