
{% set cart = craft.commerce.getCart %}

<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16" />
    <link rel="manifest" href="/images/favicons/manifest.json">
    <link rel="mask-icon" href="/images/favicons/safari-pinned-tab.svg" color="#65943f">
    <link rel="shortcut icon" href="/images/favicons/favicon.ico">
    <meta name="msapplication-config" content="/images/favicons/browserconfig.xml">
    <meta name="theme-color" content="#ff0000">

    {% sproutseo 'optimize' %}

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-103552680-1', 'auto');
      ga('send', 'pageview');

      window.csrfTokenName = "{{ craft.config.csrfTokenName|e('js') }}";
      window.csrfTokenValue = "{{ craft.request.csrfToken|e('js') }}";

    </script>

    <style>

      body {
        background-color: white;
        display: none;
      }

      header {
        display: none;
      }

    </style>

  </head>

  <body {% if bodyClass is defined %} class="{{ bodyClass }}"{% endif %} {% if currentUser %} logged-in="true" {% endif %}>

    {% if bodyLoginForm is defined %}
      {% include "components/header.twig" with { 'bodyLoginForm' : bodyLoginForm } %}
    {% else %}
      {% include "components/header.twig" %}
    {% endif %}

    <main>
      {% block main %}{% endblock %}
    </main>

    {% include "components/footer.twig" %}

    {% if stylesheet is defined %}
      <link rel="stylesheet" type="text/css" href="{{ stylesheet }}" />
    {% endif %}
    <script src="/common.js"></script>
    <link rel="stylesheet" type="text/css" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />

  </body>

</html>
