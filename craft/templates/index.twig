
{% extends "_layout" %}
{% includeCssFile "/homepage.css" %}
{% includeJsFile "/homepage.js" %}

{% block main %}

  <section id="stage">
    <div class="bg-wrap">
      <div class="image"></div>
    </div>
    <div class="lock">
      <div>
        <div>
          <h1 class="acumin-stage">
            <span>Freshly Prepared</span>
            <p>Healthy Meals</p>
            <span>Delivered to you</span></h1>
        </div>
      </div>
    </div>
  </section>

  <div class="top-layer-wrapper">

    <section id="page-navigation">
      <div>
        <a href="/shop/quick-order"><div>Quick <span>Order Form</span></div></a>
        <a href="/pages/macros"><div>What Are <span>Macronutrients</span></div></a>
        <a href="/pages/about"><div>About <span>Macro Meals</span></div></a>
      </div>
    </section>

    <section id="delivery">
      <div class="lock">
        <img src="/images/icons/delivery-truck-green.svg" />
        <p>Interested in delivery cost or pickup options?</p>
        <button class="shipping-information">Learn More</button>
      </div>
    </section>

    <section class="meals-by-category">

      {% set featuredCategory = craft.categories.group('mealType').slug('featured').first() %}

      <div class="meal-list">

        <div class="lock">

          <div class="featured">
            <h2 class="headline-with-underline">Featured Meals</h2>
          </div>
          <div>
            <div class="enteries-group" data-category-id="{{ featuredCategory.id }}"></div>
          </div>

          <a href="/shop" class="call-to-action">See all Meals</a>

        </div>

      </div>

    </section>

    <section id="shipping-info">

      <div class="lock">

        <div class="shipping">

            <div class="text">
              <h1 class="headline-with-underline">Shipping & Pickups</h1>
              <p>We ship using FedEx overnight to every state in the United States.</p>
              <p>We ship using FedEx ground overnight the area indicated below to reduce your shipping cost.  We offer <span>$10</span> shipping for orders over $50 for the areas listed.</p>

              <div class="columns">

                <div class="state-summary">

                  <div class="">
                    <h2>All of</h2>
                    <p>Maryland</p>
                    <p>Delaware</p>
                    <p>New Jersey</p>
                  </div>
                  <div class="">
                    <h2>Most of</h2>
                    <p>Virginia</p>
                    <p>Pennsylvania</p>
                    <p>New York</p>
                    <p>Rhode Island</p>
                  </div>
                  <div>
                    <h2>Some of</h2>
                    <p>North Carolina</p>
                    <p>West Virginia</p>
                    <p>Massachusetts</p>
                  </div>

                </div>

                <div class="map">
                  <img src="/images/homepage/zone-two.svg">
                </div>

                <form id="shipping-calculator">

                  <div class="loader"></div>

                  <p>Get a quote</p>

                  <div class="field" data-required="true" valid="false">
                    <label for="zipCode"><span>Zip Code</span></label>
                    <div class="input">
                      <input type="number"
                             name="zipCode"
                             id="zipCode"
                             placeholder=""
                             maxlength="5" />

                      <div class="errors">
                        <p class="required">Zip Code is a required field</p>
                      </div>
                    </div>
                  </div>

                  <input type="submit" value="Get Estimate" />
                  <div class="result"></div>

                </form>

              </div>

              <p>We have several pickup locations in the Maryland area.  Picking shipping cost is <span>$0</span>.  Please visit are <a href="pages/faq/#pickups">faq section on pickups</a> for complete details.</p>

            </div>

          </div>

        </div>

      </div>

    </section>

    <section class="meals-by-category">

      {% set seasonalCategory = craft.categories.group('mealType').slug('seasonal').first() %}

      <div class="meal-list">

        <div class="lock">

          <div class="seasonal">
            <h2 class="headline-with-underline">Seasonal Meals</h2>
          </div>
          <div>
            <div class="enteries-group" data-category-id="{{ seasonalCategory.id }}"></div>
          </div>

          <a href="/shop" class="call-to-action">See all Meals</a>

        </div>

      </div>

    </section>

  </div>

{% endblock %}
