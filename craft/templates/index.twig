
{% extends "_layout" %}
{% includeCssFile "/homepage.css" %}
{% includeJsFile "/homepage.js" %}

{% block main %}

  <section id="stage">
    <div class="bg-wrap">
      <div class="image"></div>
    </div>
    <div class="lock">
      <div>
        <div>
          <h1 class="acumin-stage">
            <span>Freshly Prepared</span>
            <p>Healthy Meals</p>
            <span>Delivered to you</span></h1>
        </div>
      </div>
    </div>
  </section>

  <div class="top-layer-wrapper">

    <section id="page-navigation">
      <div>
        <a href="/shop/quick-order"><div>Quick <span>Order Form</span></div></a>
        <a href="/pages/macros"><div>What Are <span>Macronutrients</span></div></a>
        <a href="/pages/about"><div>About <span>Macro Meals</span></div></a>
      </div>
    </section>

    <section id="delivery">
      <div class="lock">
        <img src="/images/icons/delivery-truck-green.svg" />
        <p>Interested in delivery cost or pickup options?</p>
        <button class="shipping-information">Learn More</button>
      </div>
    </section>

    <section class="meals-by-category">

      {% set featuredCategory = craft.categories.group('mealType').slug('featured').first() %}

      <div class="meal-list">

        <div class="lock">

          <div class="featured">
            <h2 class="headline-with-underline">Featured Meals</h2>
          </div>
          <div>
            <div class="enteries-group" data-category-id="{{ featuredCategory.id }}"></div>
          </div>

          <a href="/shop" class="call-to-action">See all Meals</a>

        </div>

      </div>

    </section>

    <section id="shipping-info">

      <div class="lock">

        <div class="shipping">

            <div class="text">
              <h1 class="headline-with-underline">Shipping & Pickups</h1>
              <p>We ship using FedEx overnight to every state in the United States.</p>
              <p>We ship using FedEx ground overnight to the areas indicated below to reduce your shipping cost.  We offer <span>$10</span> shipping for orders over $50 for the areas listed.</p>
              <div class="columns">

                <div class="states">
                  <p>Most areas in states:</p>
                  <ul>
                    <li>Maryland</li>
                    <li>Delaware</li>
                    <li>New Jersey</li>
                    <li>Virginia</li>
                    <li>Pennsylvania</li>
                    <li>New York</li>
                    <li>Rhode Island</li>
                    <li>North Carolina</li>
                    <li>West Virginia</li>
                    <li>Massachusetts</li>
                  </ul>
                </div>

                <form id="shipping-calculator">

                  <div class="loader"></div>

                  <p>Get a quote for your zip code:</p>

                  <div class="field" data-required="true" valid="false">
                    <label for="zipCode"><span>Zip Code</span></label>
                    <div class="input">
                      <input type="number"
                             name="zipCode"
                             id="zipCode"
                             placeholder=""
                             maxlength="5" />

                      <div class="errors">
                        <p class="required">Zip Code is a required field</p>
                      </div>
                    </div>
                  </div>

                  <input type="submit" value="Get Estimate" />
                  <div class="result"></div>

                </form>

              </div>

              <div class="pickups">

                <p>We have several pickup locations in the Maryland area.  Pickup shipping cost is <span>$0</span>. Please visit are <a href="pages/faq/#pickups">faq section on pickups</a> for complete details.</p>
                <p>Pickup locations include:</p>
                <ul>
                  <li>Post Man Plus: Abingdon, Maryland</li>
                  <li>Canton, Maryland (coming soon)</li>
                  <li>Bel Air, Maryland (coming soon)</li>
                </ul>

              </div>

            </div>

          </div>

        </div>



      </div>

    </section>

    <section class="meals-by-category">

      {% set seasonalCategory = craft.categories.group('mealType').slug('seasonal').first() %}

      <div class="meal-list">

        <div class="lock">

          <div class="seasonal">
            <h2 class="headline-with-underline">Seasonal Meals</h2>
          </div>
          <div>
            <div class="enteries-group" data-category-id="{{ seasonalCategory.id }}"></div>
          </div>

          <a href="/shop" class="call-to-action">See all Meals</a>

        </div>

      </div>

    </section>

  </div>

{% endblock %}
