{% block main %}

  {% include "components/cart-breadcrumb.twig" %}

  <section id="register">

    <div class="lock">

      <div class="already-registered">

        <div class="action-event member">

          <p class="acumin-large">Already Registered?</p>

          <form class="registered-form">

            <div class="">
              <label>Email Address</label>
              <input type="text" />
            </div>

            <div class="">
              <label>Password</label>
              <input type="text" />
            </div>

            <div class="actions">
              <button class="register-cta">Sign up?</button>
              <input type="submit" value="Member Checkout" class="call-to-action" />
            </div>

          </form>

        </div>

        <div class="summary">

          <p>Not yet Registered?</p>

          <button class="register-cta">
            <span class="icons">Register</span>
          </button>

        </div>

      </div>

      <p class="acumin-stage divider"><span>Or</span></p>

      <div class="guest">

        <div>

          <p class="acumin-large">Guest Checkout</p>
