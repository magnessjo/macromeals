
{% set cartItemsTotal = 0 %}
{% for item in cart.lineItems %}
  {% set cartItemsTotal = cartItemsTotal + item.qty %}
{% endfor %}

<header>

  <div class="lock">

    <a href="/" class="logo">
      <img src="/images/logo/green.svg" alt="image of the macro meals logo" />
    </a>

    <nav>
      <a href="/" class="icons ion-ios-home"><span>Home</span></a>
      {% include "components/nav.twig" %}
    </nav>

    <div class="overlay-actions">

      {% if not cart.email %}
        <button class="login account" data-overlay="login-form">Login</button>
      {% endif %}
      <a href="/account" class="account">Account</a>

      <div class="menu-toggle" data-showing='false'>
        <div class="menu-button">
          <div></div>
          <div></div>
          <div></div>
        </div>
      </div>

      <button class="cart" data-overlay="cart-summary">
        <div class="number">{{ cartItemsTotal }}</div>
        <img src="/images/icons/cart.svg" alt="image of the cart icon"/>
      </button>

    </div>

  </div>

  <div class="header-overlay cart-summary" aria-hidden='true'>

    <div class="order-items"></div>

    <div class="header-cart-actions">
      <a href="/checkout" class="call-to-action">Checkout</a>
    </div>

  </div>

  {% if bodyLoginForm is not defined %}
    <div class="header-overlay login-form" aria-hidden="true">
      {% include "components/login-form.twig" %}
    </div>
  {% endif %}

  <div id="menu">

    <div class='mobile-nav' aria-hidden="true">
      {% include "components/nav.twig" %}
      {% if currentUser %}
        <a href="/account"><div>Account</div></a>
      {% else %}
        <a href="/account/login"><div>Login</div></a>
      {% endif %}
    </div>

  </div>

</header>
