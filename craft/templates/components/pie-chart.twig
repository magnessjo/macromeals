
{% set protein = '' %}
{% set carbs = '' %}
{% set fat = '' %}

{% for row in macros %}

  {% if row.protein %}
    {% set protein = row.protein %}
  {% endif %}

  {% if row.carbs %}
    {% set carbs = row.carbs %}
  {% endif %}

  {% if row.fat %}
    {% set fat = row.fat %}
  {% endif %}

{% endfor %}

<div class="pie-chart">
  <canvas height="200" width="200" data-pie="{{protein}},{{carbs}},{{fat}}" />
</div>
