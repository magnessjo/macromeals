
{% set segment = craft.request().getLastSegment() %}

<div class="cart-breadcrumb">

  <div class="lock">

    <h1>

      {% if segment == 'checkout' %}
        <span>Customer</span>Information
      {% endif %}

      {% if segment == 'summary' %}
        <span>Order</span>Summary
      {% endif %}

      {% if segment == 'billing' %}
        <span>Order</span>Billing
      {% endif %}

    </h1>

    <div>

      {% if segment=="checkout" %}
        <p class='active'>Customer <span>Information</span></p>
        <p><span>Order</span> Summary</p>
        <p><span>Order</span> Billing</p>
      {% endif %}

      {% if segment=="summary" %}
        <a href="/checkout" class='completed'>Customer <span>Information</span></a>
        <p class="active"><span>Order</span> Summary</p>
        <p><span>Order</span> Billing</p>
      {% endif %}

      {% if segment=="billing" %}
        <a href="/checkout" class='completed'>Customer <span>Information</span></a>
        <a href="/checkout/summary" class='completed'><span>Order</span> Summary</a>
        <p class="active"><span>Order</span> Billing</p>
      {% endif %}

    </div>

  </div>

</div>
