
{% includeCssFile "/labels.css" %}
{% includeJsFile "/labels.js" %}

{% set count = [1, 2, 3, 4] %}
{% set slug = craft.request.getSegment(2) %}
{% set variant = craft.commerce.variants.sku('00000017').first() %}

<!DOCTYPE html>
<html>

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
  </head>

  <body>

    <main>

      {% for item in count %}

        {% for product in craft.commerce.products.slug(slug) %}

          <section>

            <div class="info">

              <img src="/images/logo/green.svg" class="logo" alt="image of the macro meals logo" />

              <div class="description">

                <h1>{{ product.title }} <span>{{ product.subTitle }}</span></h1>

                <div class="ingredients">
                  <h3>Ingredients</h3>

                  {% for list in product.ingredients %}

                    {% if not list.hide %}
                      {{ list.item }}{% if not loop.last %},{% endif %}
                    {% endif %}

                  {% endfor %}
                </div>

                <div class="instructions">
                  <h3>Instructions</h3>
                  <p>{{ product.instructions }}</p>
                </div>

                <div class="alerts">

                  <div>
                    <p class="headline">Enjoy By</p>
                    <p>{{ product.expirationDate }}</p>
                  </div>

                  <div>
                    <p class="headline">ALLERGEN ALERT</p>
                    <p>{{ product.allergenAlert }}</p>
                  </div>

                </div>

              </div>

              <div class="connect">
                <h4>Connect With Us</h4>
                <p>http://macromeals.life</p>
              </div>

            </div>

            <div class="facts">

                <div class="list">

                  <h2>NUTRITION FACTS</h2>

                  {% for purchasable in product.variants %}

                    <div>
                      {% for row in purchasable.productMacros %}
                        {% if row.calories %}<p class="nimbus-tiny-bold"><span>CALORIES:</span> {{ row.calories }}</p>{% endif %}
                        {% if row.protein %}<p class="nimbus-tiny-bold protein"><span>PROTEIN:</span> {{ row.protein }}g</p>{% endif %}
                        {% if row.carbs %}<p class="nimbus-tiny-bold carbs"><span>CARBS:</span> {{ row.carbs }}g</p>{% endif %}
                        {% if row.fat %}<p class="nimbus-tiny-bold fat"><span>FAT:</span> {{ row.fat }}g</p>{% endif %}
                      {% endfor %}

                    </div>

                    {% include "components/pie-chart.twig" with { 'macros': purchasable.productMacros } %}

                  {% endfor %}

                </div>

            </div>

          </section>

        {% endfor %}

      {% endfor %}

    </main>

  </body>

</html>
